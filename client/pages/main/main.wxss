    font-style:normal;
    font-size:0;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
.iconfont:before {
    font-size:16px;
}
  
  .icon-multiply:before { content: "\e619"; }
  
  .icon-plus:before { content: "\e64d"; }
  
  .icon-divide:before { content: "\e63d"; }
  
  .icon-minus:before { content: "\e600"; }
  
  .icon-reset:before { content: "\e612"; }
  
  .icon-redo:before { content: "\e615"; }
  
  .icon-next:before { content: "\e626"; }
  
  .icon-undo:before { content: "\e64c"; }
  
  .icon-pre:before { content: "\e710"; }

page{
    height:100%;
}

.container{
    display:flex;
    flex-direction: column;
    align-content: space-around;
    justify-content: center;
    height:100%;
    overflow: hidden;
}

.tool-wrap,.operator-wrap,.numbers-wrap{
    display:flex;
    flex-direction: row;
    padding:20rpx;
}

/**
 * tool
 */
.tool-wrap{
    position:absolute;
    top:20rpx;
    /*background:#ffe484;*/
    align-content: center;
    justify-content: center;
}
.tool-wrap view{
    width:120rpx;
    height:120rpx;
    margin-left:5rpx;
    text-align:center;
    line-height: 120rpx;
}
.tool-wrap .iconfont:before {
    font-size:80rpx;
    color:#2e0000;
    /*color:#e89000;*/
}
.tool-wrap view.disabled .iconfont:before{
    opacity:.5;
}
.tool-undo .iconfont:before, .tool-redo .iconfont:before {
    font-size:90rpx;
}
.tool-reset .iconfont:before {
    font-weight: 700;
}

.tool-tap .iconfont:before {
    opacity:.8;
}


/**
 * score
 */
.score-wrap .no{
    padding-right:20rpx;
    color:#2e0000;
}
.no-wrap{
    text-align: right;
}
.time-wrap{
    text-align: left;
}

/**
 * number display
 */
.numbers-wrap{
    width:640rpx;
    height:640rpx;
    padding-bottom:60rpx;
    flex-direction: column;
    align-items: center;
}
.numbers-top,.numbers-bottom{
    width:100%;
    height:312rpx;
    display:flex;
    flex-direction: row;
    align-items: center;
    align-content: space-between;
    justify-content: center;
}
.numbers-top{
    margin-bottom:20rpx;
}
.numbers-wrap .number{
    width:300rpx;
    height:300rpx;
    border:6rpx solid #2e0000;
    background:#ffe585;
    border-radius: 20rpx;
    text-align:center;
    line-height: 300rpx;
    box-shadow: 5rpx 5rpx 5rpx rgba(46,0,0,.5);
}
.numbers-wrap .calculate{
    background:#ffd95e;
}
.numbers-wrap .disappear{
    visibility: hidden;
}
.numbers-wrap .icon-num{
    font-size:200rpx;
    color:#390707;
    font-family: "Helvetica","Helvetica Neue","PingFang SC","微软雅黑";
    font-weight: 800;
    -webkit-font-smoothing: antialiased;
}
.numbers-wrap .calculate .icon-num{
    color:#2e0000;
}
.number-tl,.number-bl {
    margin-right:20rpx;
}
.numbers-wrap .number-tap{
    opacity:.8;
}

/**
 * operator area
 */
.operator-wrap{
    width:660rpx;
    height:140rpx;
    position:absolute;
    bottom:40rpx;
}
.operator-wrap .iconfont:before {
    font-size:100rpx;
    color:#e88f00;
}
.operator-wrap view.button{
    width:25%;
    height:140rpx;
    text-align:center;
}
.operator-wrap .block{
    width:130rpx;
    height:130rpx;
    text-align: center;
    line-height: 130rpx;
    align-items: center;
    align-content: center;
    justify-content: center;
}
.plus .iconfont:before{
    font-size:90rpx;
}
.minus .iconfont:before, .divide .iconfont:before{
    font-weight:800;
}
.operator-wrap .selected .block{
    height:130rpx;
    width:130rpx;
    background:#ffe37e;
    border:5rpx solid #ffe37e;
    border-radius: 10rpx;
    opacity:.8;
}
.operator-wrap .selected .block .iconfont:before{
    /*color:#ffba00;*/
    color:#fff;
}

.operator-wrap .operator-tap .iconfont:before{
    opacity:.8;
}